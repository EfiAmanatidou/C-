#include <iostream>
using namespace std;

void ex1() {
    //1st solution
    for (int i = 0; i < 100; i++) {
        if (i % 4 == 0) cout << i << " "; }
    cout << endl;

    //2nd solution
    for (int i = 0; i < 100; i += 4)
        cout << i << " ";
    cout << endl; }

void ex2() {
    for (int i = 0; i <= 100; i += 4)
        if (i % 6 == 0 && i % 8 == 0)
            cout << i << " "; }
void ex3() {
    for (char c = 'a'; c <= 'z'; c++)
        cout << c << " ";
    cout << endl; }
void ex4() {
    for (int i = 0; i < 100; i++) ex3(); }

int main() {
 ex1();
 ex2();
 ex3();
 ex4();
 return 0; }
